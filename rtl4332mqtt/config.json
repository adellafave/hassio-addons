{
  "name": "RTLAMR to MQTT Bridge",
  "version": "0.2.1",
  "slug": "rtlamr2mqtt",
  "description": "AMR RF to MQTT Bridge based on RTL_SDR/RTL_TCP/RTLAMR for RTL2832U based DVB-T USB tuners",
  "url": "https://github.com/adellafave/hassio-addons/tree/adellafave-rtlamrdev/rtl4332mqtt",
  "startup": "services",
  "map": ["config:rw", "ssl"],
  "usb": true,
  "host_network": "False",
  "arch": [
    "aarch64",
    "amd64",
    "armv7",
    "i386"
  ],
  "options":
  {
    "mqtt_host": "core-mosquitto",
    "mqtt_user": "homeassistant",
    "mqtt_password": "",
    "mqtt_topic": "AMR_Meters/",
    "protocol": 100,
    "frequency": 319500000,
    "gain": 60,
    "frequency_offset": 350
  },
  "schema":
  {
    "mqtt_host": "str",
    "mqtt_user": "str",
    "mqtt_password": "str",
    "mqtt_topic": "str",
    "protocol": "int",
    "frequency": "int",
    "gain": "int",
    "frequency_offset": "int"
   }
}
